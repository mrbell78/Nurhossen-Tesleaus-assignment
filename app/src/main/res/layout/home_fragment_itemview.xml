<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="3dp"
        android:elevation="6dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        app:cardBackgroundColor="#F2FAF6"
        android:layout_marginBottom="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:cardCornerRadius="20dp"
                    android:elevation="2dp"
                    app:cardElevation="5dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imageprofile"
                        android:src="@drawable/sunnylion"/>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/nameid"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/baumans"
                        android:textStyle="bold"
                        android:text="Elias Mohammad"
                        android:textColor="#465267"
                        android:textSize="15sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:layout_gravity="center"
                            app:cardBackgroundColor="#1A752F"
                            app:cardCornerRadius="7dp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:layout_gravity="center"
                                app:cardBackgroundColor="#FE0014"
                                app:cardCornerRadius="5dp">

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                        <TextView

                            android:id="@+id/countryid"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/baumans"
                            android:text="Bangladesh"
                            android:textColor="#AFADB1"

                            android:textSize="13sp" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="25dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:background="#F2F3F2"/>



                </LinearLayout>



            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical">

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="sans-serif"
                   android:text="About The Expert"
                   android:textColor="#929393"
                   android:textSize="13sp"
                   android:textStyle="normal" />

               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="10dp"
                   android:fontFamily="sans-serif"
                   android:text="software Engineer"
                   android:textColor="#CDD2CE"
                   android:textSize="11sp"
                   android:id="@+id/designation"
                   android:textStyle="bold" />
           </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView

                    app:cardBackgroundColor="#E5F4EC"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="2dp"
                    app:cardElevation="1dp"

                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#PHP"
                        android:id="@+id/language"
                        android:textColor="#37975E"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    app:cardBackgroundColor="#E5F4EC"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="2dp"
                    app:cardElevation="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#PYTHON"
                        android:textColor="#7DD7F1"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView

                    app:cardBackgroundColor="#E5F4EC"
                    android:layout_width="60dp"
                    android:layout_gravity="center"
                    app:cardCornerRadius="5dp"
                    android:elevation="2dp"
                    app:cardElevation="1dp"
                    android:layout_marginLeft="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="#PYTHON"
                        android:textColor="#67A2EA"
                        android:layout_gravity="center"
                        android:textSize="12sp"/>
                </androidx.cardview.widget.CardView>



            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>





</RelativeLayout>